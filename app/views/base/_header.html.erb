<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
  <!-- Left navbar links -->
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
    </li>
    <li class="nav-item d-none d-sm-inline-block">
      <%= link_to 'Home', root_path, class:"nav-link" %>
    </li>
  </ul>

  <%if user_signed_in?%>
    <!-- SEARCH FORM -->
    <%= form_tag "/notes", method: "GET", class: "form-inline ml-3" do %>
      <div class="input-group input-group-sm">
        <%= text_field_tag :search, params[:search], class: "form-control form-control-navbar",
           type: "search", placeholder: "Search notes", 'aria-label' => 'Search' %>
        <div class="input-group-append">
          <%= button_tag(type: "submit", class: "btn btn-navbar") do %>
            <i class="fas fa-search"></i>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      <!-- Dropdown Menu -->
      <li class="nav-item dropdown">
        <a class="nav-link" data-toggle="dropdown" href="#">
          <i class="fas fa-2x fa-cog"></i>
          <!-- span class="badge badge-warning navbar-badge">15</span-->
        </a>
        <div class="dropdown-menu dropdown-menu-right">
          <a href="#" class="dropdown-item">
            Options:
          </a>
          <div class="dropdown-divider"></div>
          <%= link_to(destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' },
              class:"dropdown-item") do %>
            <i class="fas fa-sign-out-alt"></i> Logout
          <%end%>
        </div>
      </li>
    </ul>
  <%end%>
</nav>