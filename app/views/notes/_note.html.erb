<div class="card">
  <div class="card-header">
    <h3 class="card-title"><%= note.title %></h3>
    <div class="card-tools">
      <!-- Collapse Button -->
      <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
    </div>
    <!-- /.card-tools -->
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    The body of the card
  </div>
  <!-- /.card-body -->
</div>
<!-- /.card -->
<div class="col-12 col-md-4 col-sm-6 col-lg-3">
  <div class="btn-group dropright padding">
    <div class="card">
      
        <div class="card-body">
          <%= link_to(note) do %>
            <h5 class="card-title text-uppercase"><%= note.title %></h5>
          <% end %>
          <h6 class="card-subtitle mb-2 text-muted">from book <%= link_to(note.book) do %><strong><%= note.book.name %></strong><% end %></h6>
          <p class="small text-secondary margin-top"> 
            <%= note.content.to_plain_text.truncate(20) %>
          </p>
        </div>
      
      <div class="card-footer small text-muted">
        <!--%= note.updated_at.to_formatted_s(:short) %-->
        <%= time_ago_in_words(note.updated_at) %> ago
      </div>
    </div>
    <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="sr-only">Toggle Dropdown</span>
    </button>
    <div class="dropdown-menu">
      <%= link_to 'Show', note, class:"dropdown-item" %>
      <%= link_to 'Edit', edit_note_path(note), class:"dropdown-item" %>
      <div class="dropdown-divider"></div>
      <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class:"dropdown-item" %>
    </div>
  </div>
</div>